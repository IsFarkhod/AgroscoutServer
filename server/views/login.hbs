<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/login.css">
</head>
<body>
    {{#if alert}}
    <section class="message">
        <h1 class="message__title">{{alert}}</h1>
    </section>
    {{/if}}
    <section class="registry">
        <div class="registry__header">
            <h1 class="registry__title login__btn">Administrator</h1>
            <span class="sep"></span>
            <h1 class="registry__title sign-up__btn">User</h1>
        </div>
        <div class="registry__block">
            <div class="login">
                <form action="/admin" method="POST">
                    <input class="registry__input" name="loginName" type="text" placeholder="Имя">
                    <input class="registry__input" name="loginPassword" type="password" placeholder="Password">
                    <button class="registry__btn" type="submit">Войти</button>
                </form>
            </div>
            <div class="sign-up">
                <form action="/register" method="POST">
                    <input class="registry__input" name="firstName" type="text" placeholder="Имя">
                    <input class="registry__input" name="lastName" type="text" placeholder="Фамилия">
                    <input class="registry__input" name="email" type="email" placeholder="Email">
                    <input class="registry__input" name="passUser" type="password" placeholder="Пароль">
                    <input class="registry__input" name="passConfirm" type="password" placeholder="Подтвердите пароль">
                    <button class="registry__btn" type="submit">Зарегестрироваться</button>
                </form>
            </div>
        </div>
    </section>
    <script>
        // Button's for show
        const signUpBtn = document.querySelector(".sign-up__btn")
        const loginBtn = document.querySelector(".login__btn")
        // Form Log In & Sign Ip
        const signUpForm = document.querySelector(".sign-up")
        const logInForm = document.querySelector(".login")

        signUpBtn.addEventListener('click', () => {
            signUpForm.style.display = 'block'
            signUpBtn.style.color = 'rgb(68, 221, 68)'
            loginBtn.style.color = '#fff'
            logInForm.style.display = 'none'
        })

        loginBtn.addEventListener('click', () => {
            logInForm.style.display = 'block'
            loginBtn.style.color = 'rgb(68, 221, 68)'
            signUpBtn.style.color = '#fff'
            signUpForm.style.display = 'none'
        })
    </script>
</body>
</html>